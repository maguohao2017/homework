<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.modular.homework.dao.HomeworkDao">

    <sql id="Base_Column_List">
        t.id,
        t.homework_name as homeworkName,
        t.file_path as filePath,
        t.file_size as fileSize,
        t.file_type as fileType,
        t.create_time as createTime,
        t.update_time as updateTime,
        t.status,
        t.folder_id as folderId,
        t1.folder_name as folderName


    </sql>

    <select id="getHomeworkList" resultType="map" parameterType="String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM homework t
        LEFT JOIN folder t1
        ON t.folder_id = t1.id
        <where>
            <if test="folderId!= null and folderId !=  ''">
                t.folder_id = #{folderId}
            </if>
        </where>
        order by t.update_time desc
    </select>

    <select id="getHomeworkList_student" resultType="map" parameterType="String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM homework_student t
        LEFT JOIN folder t1
        ON t.folder_id = t1.id
        order by t.update_time desc
    </select>

    <insert id="insertHomework" parameterType="Map">
        INSERT INTO homework
        (homework_name,file_path,file_size,file_type,create_time,update_time,status,folder_id,user_id
        )
        VALUES (
        #{homeworkName},#{filePath},#{fileSize},#{fileType},NOW(),NOW(),#{status},#{folderId},#{userId}
        )
    </insert>

    <insert id="insertHomework_student" parameterType="Map">
        INSERT INTO homework_student
        (homework_name,file_path,file_size,file_type,create_time,update_time,status,folder_id,user_id
        )
        VALUES (
        #{homeworkName},#{filePath},#{fileSize},#{fileType},NOW(),NOW(),#{status},#{folderId},#{userId}
        )
    </insert>

    <delete id="deleteHomework" parameterType="Integer">
        delete from
        homework t
        where t.id = #{id}
    </delete>



</mapper>
